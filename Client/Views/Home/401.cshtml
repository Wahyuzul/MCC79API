                height: 100px;
                vertical-align: middle;
            }

        .button {
            display: block;
            width: 200px;
            margin: 20px auto 0;
            padding: 10px 20px;
            text-align: center;
            background-color: #ff5851;
            color: #fff;
            font-size: 16px;
            font-weight: bold;
            text-decoration: none;
            border-radius: 5px;
        }

            .button:hover {
                background-color: #ff6b65;
            }
